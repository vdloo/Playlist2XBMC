{
	"name": "Playlist2XBMC",
	"version": "1.1.4",
	"permissions": [
		"tabs", "http://*/*","background"
	],
	"content_security_policy": "default-src 'self'; script-src 'self'; media-src 'self'; object-src 'self';",
	"icons": {
	"16": "/images/icon16.png",
	"48": "/images/icon48.png",
	"128": "/images/icon128.png" 
	},
	"manifest_version": 2,
	"background": {
		"scripts": ["background.js"]
	},
	"options_page": "options.html",
	"content_scripts": [
		{
		"matches": ["*://www.youtube.com/*"],
		"js": ["jquery-1.7.2.min.js", "/contentscripts/connect.js", "/contentscripts/jsondata.js"],
		"run_at": "document_end"
		},{
		"matches": ["*://www.youtube.com/"],
		"js": ["/contentscripts/yt_home.js"],
		"run_at": "document_end"
		},{
		"matches": ["*://www.youtube.com/watch?v=*"],
		"js": ["/contentscripts/yt_player.js"],
		"run_at": "document_end"
		},{
		"matches": ["*://www.youtube.com/results?search_query=*", "http://www.youtube.com/results?search_type=*"],
		"js": ["/contentscripts/yt_search.js"],
		"run_at": "document_end"
    		}
  	]
}
